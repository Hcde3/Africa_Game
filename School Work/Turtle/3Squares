import turtle
scr = turtle.Screen()
turtle.penup()
turtle.backward(400)
turtle.pendown()
colours = ["red","blue","green"]
for x in range(3):
    turtle.color("black",colours[x])
    turtle.begin_fill()
    for x in range(4):
        turtle.forward(100)
        turtle.left(90)
    turtle.end_fill()
    turtle.penup()
    turtle.forward(200)
    turtle.pendown()
turtle.exitonclick()
